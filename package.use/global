# Use luajit
*/* LUA_SINGLE_TARGET: -* luajit LUA_TARGETS: -* luajit

# Use ruby30
*/* RUBY_TARGETS: -* ruby30

# Use wayland and disable X
*/* -X wayland

# Use VAAPI
*/* vaapi

# Use Vulkan
*/* vulkan

# Use dist-kernel
*/* dist-kernel

# Audio
*/* -alsa pulseaudio pipewire

# Use lto when possible
#*/* lto

# No bluetooth
*/* -bluetooth -networkmanager -modemmanager

# Use PIC
*/* pic

# Use policykit
*/* policykit

# Use gstreamer
*/* gstreamer

# Use homed
#*/* homed

# Use hardened
*/* hardened

# Use cups
*/* cups

# Use dbus
*/* dbus

# Avoid GLX
*/* gles2-only gles2 -opengl

# Unwind
*/* unwind

# Enable ALL llvm targets
*/* LLVM_TARGETS: *

# Use host specific cpu flags
*/* CPU_FLAGS_X86: aes avx avx2 f16c fma3 mmx mmxext pclmul popcnt rdrand sse sse2 sse3 sse4_1 sse4_2 ssse3
