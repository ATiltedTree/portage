# Use luajit
*/* LUA_SINGLE_TARGET: -* luajit LUA_TARGETS: -* luajit

# Use python 3.10
*/* PYTHON_TARGETS: python3_10 #PYTHON_SINGLE_TARGET: -* python3_10

# Use ruby30
*/* RUBY_TARGETS: -* ruby30

# Use wayland and disable X
*/* -X wayland

# Use VAAPI
*/* vaapi

# Use Vulkan
*/* vulkan

# Use dist-kernel
*/* dist-kernel

# Audio
*/* -alsa pulseaudio pipewire

# No bluetooth
*/* -bluetooth -networkmanager -modemmanager

# Use policykit
*/* policykit

# Use gstreamer
*/* gstreamer

# Use PIC
*/* pic

# Use cups
*/* cups

# Use dbus
*/* dbus

# Avoid GLX
*/* gles2-only gles2 -opengl

# Unwind
*/* unwind

# Compression
*/* zstd

# UI
*/* gtk3

# Image formats
*/* jpeg gif png svg tiff webp exif jpeg2k

# Enable ALL llvm targets
*/* LLVM_TARGETS: *

# Use host specific cpu flags
*/* CPU_FLAGS_X86: aes avx avx2 f16c fma3 mmx mmxext pclmul popcnt rdrand sse sse2 sse3 sse4_1 sse4_2 ssse3

# VIDEO_CARDS
*/* VIDEO_CARDS: -* amdgpu radeonsi

# SANE_BACKENDS
*/* SANE_BACKENDS: -* xerox_mfp

# L10N
*/* L10N: en
